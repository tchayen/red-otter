{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "moduleResolution": "node",
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".eslintrc.cjs",
    "postcss.config.js",
    "tailwind.config.js",
    "next.config.mjs",
    "remarkTypography.mjs"
  ],
  "exclude": ["node_modules"]
}
