{
  "name": "@red-otter/monorepo",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*",
    "docs"
  ],
  "scripts": {
    "lib:build": "cd packages/red-otter; yarn build",
    "lib:tsc": "cd packages/red-otter; yarn tsc",
    "lib:lint": "cd packages/red-otter; yarn lint",
    "lib:test": "cd packages/red-otter; yarn test",
    "lib:check": "yarn lib:tsc && yarn lib:lint && yarn lib:test",
    "docs:dev": "cd docs; yarn dev",
    "docs:build": "cd docs; yarn build",
    "docs:generate": "cd docs; yarn generate",
    "docs:tsc": "cd docs; yarn tsc",
    "docs:lint": "cd docs; yarn lint"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "eslint": "^8.35.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "typescript": "^4.9.5"
  }
}
